{
  "name": "grouper",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.4",
    "@hotwired/turbo-rails": "^8.0.4",
    "stimulus-library": "^1.0.6",
    "stimulus-use": "^0.52.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-stimulus-components": "^4.0.3",
    "yarn": "^1.22.21"
  },
  "devDependencies": {
    "vite": "^5.2.8",
    "vite-plugin-rails": "^0.5.0",
    "vite-plugin-ruby": "^5.0.0"
  },
  "scripts": {
    "watch:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets --watch",
    "watch:css": "tailwindcss -i app/javascript/entrypoints/application.tailwind.css -o ./app/assets/builds/application.css --minify --watch",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i app/javascript/entrypoints/application.tailwind.css -o ./app/assets/builds/application.css --minify"
  }
}
