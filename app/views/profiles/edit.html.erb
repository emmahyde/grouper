<%= turbo_frame_tag 'edit-profile-modal' do %>
  <div class='fixed z-20 w-screen h-screen bg-gray-100/75'>
    <div class='fixed z-10 top-1/4 left-1/4 bg-gray-600 opacity-100 p-4 rounded-md'>
    <%= form_with model: [@user, @profile], id: 'edit-profile-form', class:'w-96', local: true do |f| %>
      <div id='avatar' class='flex rounded-full -top-12 bg-purple-400 items-center justify-center' style='height: 100px; width: 100px;'>
        <%= image_tag 'default-avatar-fish.png', alt: 'Avatar', class: 'rounded-full'%>
      </div>

      <div>
        <%= f.label :name, class:'block text-white'  %>
        <%= f.text_field :name, class:'w-72 px-2' %>
      </div>
        
      <div>
        <%= f.label :slug, class:"block text-white"  %>
        <%= f.text_field :slug, class:'w-80 px-2' %>
      </div>
      
      <div>
        <%= f.label :description, class:"block text-white"  %>
        <%= f.text_area :description, class:'w-full px-2' %>
      </div>

      <div>
        <%= f.submit "Save Changes", class:"block text-white bg-gray-800 rounded-full px-2" %>
      </div>
    <% end %>
    </div>
  </div>
<% end %>