<div class="max-w-4xl mx-auto p-4">
  <h1 class='font-semibold text-3xl text-gray-400 mb-6'>
    Incoming Requests:
  </h1>

  <div class="mb-8 p-4 rounded-lg shadow-md bg-white">
    <% @friendships[:incoming].each do |friendship| %>
      <div class="p-2 border-b last:border-b-0">
        <%= render 'friendship', friendship: %>
      </div>
    <% end %>
  </div>

  <h1 class='font-semibold text-3xl text-gray-400 mb-6'>
    Outgoing Requests:
  </h1>

  <div class="mb-8 p-4 rounded-lg shadow-md bg-white">
    <% @friendships[:outgoing].each do |friendship| %>
      <div class="p-2 border-b last:border-b-0">
        <%= render 'friendship', friendship: %>
      </div>
    <% end %>
  </div>

  <h1 class='font-semibold text-3xl text-gray-400 mb-6'>
    Friends:
  </h1>

  <div class="p-4 rounded-lg shadow-md bg-white">
    <% @friendships[:mutuals].each do |friendship| %>
      <div class="p-2 border-b last:border-b-0">
        <%= render 'friendship', friendship: %>
      </div>
    <% end %>
  </div>
</div>
