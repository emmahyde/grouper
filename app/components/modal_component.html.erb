<%= turbo_frame_tag "modal" do %>
  <%= tag.div id:'modal-overlay',
              class: 'fixed z-20 w-screen h-screen bg-gray-100/75',
              data: { controller: 'modal',
                      modal_target: 'modal',
                      action: 'turbo:submit-end->modal#submitEnd keydown.esc@window->modal#closeWithEscape mousedown@window->modal#closeWithBackgroundClick'} do %>
    <%= tag.div class: 'fixed z-10 top-1/4 left-1/4 bg-gray-600 opacity-100 p-4' do %>  
      <h1 class="font-bold text-4xl"><%= @title %></h1>
      <%= content %>
      <%= button_tag "Cancel", data: { action: "modal#closeModal" }, type: "button", class: "my-2 py-2 px-4 bg-red-600 text-white" %>
    <% end %>
  <% end %>
<% end %>
